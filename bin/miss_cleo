#!/usr/bin/env ruby

require "miss_cleo"
include ::MissCleo::CoverageMapHelper

case ARGV.first
when "build_deck"
  build_deck(ARGV[1..-1])
when "predict"
  unless ARGV[1]
    puts "Specify a coverage map."
    puts "e.g. 'miss_cleo predict map.json.gz"
  else
    map = File.open(ARGV[1]).read.gunzip
    predict
  end
else
  puts "Please run miss_cleo with 'build_deck' or 'predict'."
end

